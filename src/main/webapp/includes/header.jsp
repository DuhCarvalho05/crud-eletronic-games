<body style="background-color: #000; overflow-x: hidden;">
	<nav style="background-color: #000; border-bottom: 1px solid #27272a" class="navbar navbar-expand-lg position-fixed top-0 w-100 z-3 nav-glass">
		<div class="container">
			<a class="navbar-brand text-light fw-bold"
				href="${pageContext.request.contextPath}/">Ace games</a>

			<form class="d-flex align-items-center position-relative w-50"
				role="search" action="${pageContext.request.contextPath}/search"
				method="GET">
				<input
					style="height: 30px; background: #27272a; border-color: #27272a; color: #fafafa; font-size: 14px;"
					class="form-control me-2 search-input" name="q" placeholder="Buscar jogo por titulo">
				<button
					style="background: none; border: none; top: 0px; right: 12px; position: absolute; color: #96969e;"
					type="submit">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
						fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
						  <path
							d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
						</svg>
				</button>
			</form>

			<div class="d-flex align-items-center gap-3">
				<c:choose>
					<c:when test="${ not empty user }">
					
						<c:if test="${ user.type == 'ADMIN' }">
							<a class="text-light" href="${pageContext.request.contextPath}/category-list">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bookmarks" viewBox="0 0 16 16">
								  <path d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v11.5a.5.5 0 0 1-.777.416L7 13.101l-4.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v10.566l3.723-2.482a.5.5 0 0 1 .554 0L11 14.566V4a1 1 0 0 0-1-1z"/>
								  <path d="M4.268 1H12a1 1 0 0 1 1 1v11.768l.223.148A.5.5 0 0 0 14 13.5V2a2 2 0 0 0-2-2H6a2 2 0 0 0-1.732 1"/>
								</svg>
							</a>
						
							<a class="text-light" href="${pageContext.request.contextPath}/game-list">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-controller" viewBox="0 0 16 16">
								  <path d="M11.5 6.027a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m-1.5 1.5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1m2.5-.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m-1.5 1.5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1m-6.5-3h1v1h1v1h-1v1h-1v-1h-1v-1h1z"/>
